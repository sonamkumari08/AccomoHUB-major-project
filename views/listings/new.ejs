
<% layout("/layouts/boilerplate") -%>
    
    <div class="row">
      <div class="col-8 offset-3">
        <br>
        <h3>Create a New Listing</h3>
        <br>
       <form method="POST" action="/listings" novalidate class="needs-validation"
         enctype="multipart/form-data"   >
       <div class="mb-3">
        <label for="title" class="form-title">Title</label>
             <input
              name="listing[title]"
              placeholder="Add a catchy title"
              type="text" 
              class="form-control"
              required
              />
            </div>
          <div class="mb-3">
          <label for="description" class="form-title">description</label>
           <textarea
            name="listing[description]"
            placeholder="enter description"
            class="form-control"
            required
         ></textarea>
         </div>
        <div class="mb-3">
          <label for="image" class="form-title">Upload a image</label>
           <input
            name="listing[image]"
            type="file"
            class="form-control"
            required
            />
         </div>
        <div class="row">  
        <div class="mb-3  col-md-4">
        <label for="price" class="form-title">Price</label>
        <input
         name="listing[price]"
         placeholder="1200"
         type="number"
         class="form-control"
         required
         />
      </div>
      <div class="mb-3  col-md-8">
        <label for="country" class="form-title">country</label>
        <input 
         name="listing[country]"
         placeholder="enter country"
         type="text" 
         class="form-control"
          required
         />
      </div>
         </div>
      <div class="mb-3">
        <label for="location" class="form-title">Location</label>
      <input
        name="listing[location]"
        placeholder="enter location"
        type="text"
        class="form-control"
        required
        />
       </div><br>
      <button class="btn btn-danger">Add</button>
    </form>
    </div>
    </div>
